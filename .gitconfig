[commit]
	gpgsign = true
	verbose = true
[core]
	autocrlf = input
	excludesfile = ~/.gitignore
	pager = less -x1,5
[diff]
	tool = meld
[merge]
	tool = meld
[mergetool]
	keepBackup = false
[alias]
	ignore = !curl -sl https://www.gitignore.io/api/$(echo $@ | tr -s [:blank:] ,)
	tree = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	pristine = !git reset --hard && git clean -fdx
	d = diff
	c = commit
	co = checkout
	s = status
	ps = push
	pl = pull
	dc = diff --cached
	l = log
	rs = restore
	rss = restore --staged
	sh = show
	can = commit --amend --no-edit
	rb = rebase
	rbc = rebase --continue
	rba = rebase --abort
	rl = reflog
	ca = commit --amend
	squeeze = !git reflog expire --all --expire=now && git gc --prune=now --aggressive
[url "git@github.com"]
	insteadOf = gh
[url "git@gitlab.com"]
	insteadOf = gl
