[user]
	name = Gianluca Recchia
	email = gianluca.recchia@protonmail.com
	signingkey = 3C2B4128D9A1F218
[commit]
	gpgsign = true
	verbose = true
[core]
	autocrlf = input
	pager = less -x1,5
[alias]
	ignore = !curl -sLw '\n' "https://www.toptal.com/developers/gitignore/api/$(echo $@ | tr -s [:blank:] ,)"
	lol = log --graph --pretty=birdseye
	pristine = !git reset --hard && git clean -fdx
	d = diff
	c = commit
	co = checkout
	s = status
	ps = push
	psf = push --force
	pl = pull
	dc = diff --cached
	l = log
	rs = restore
	rss = restore --staged
	sh = show
	can = commit --amend --no-edit
	caan = commit --all --amend --no-edit
	rb = rebase
	rbc = rebase --continue
	rba = rebase --abort
	rl = reflog
	ca = commit --amend
	squeeze = !git reflog expire --all --expire=now && git gc --prune=now --aggressive
	enable-hooks = !rename '.sample' '' .git/hooks/{prepare-commit-msg,pre-push}.sample
	dance = !git add -A && git commit -m 'Initial commit'
	psu = "!psu() { git push -u \"${1:-origin}\" HEAD; }; psu"
	root = rev-parse --show-toplevel
[url "git@github.com:"]
	insteadOf = gh:
[url "git@gitlab.com:"]
	insteadOf = gl:
[url "https://aur.archlinux.org/"]
	insteadOf = aur:
[pull]
	rebase = true
[pretty]
	birdseye = %C(auto)%h%d% s %C(bold blue)<%aN> %C(green)(%cr)%Creset
