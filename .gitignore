# Ignore anything except for dotfiles
/[^.]*

# Ignore everything but config files in the ~/.ssh folder
.ssh/*
!.ssh/config_*

# Ignore .password-store since it's its own repo
.password-store/

# History files
.*_history

# WSL artifacts
.hushlogin
.motd_shown
.sudo_as_admin_successful

# Vim stuff
.vim
.viminfo
.vimrc

# Ignore ~/.git-prompt.sh and ~/.git-completion.sh symlinks
.git-prompt.sh
.git-completions.sh

# Cloud platforms config data (created by Docker for Windows)
.aws
.azure

# Docker stuff
.docker/

# Misc
.wget-hsts
.nvimlog
.Xauthority
.gtkrc-2.0
.fonts.conf

# Ignore cache directory
.cache

# Ignore Kubernetes data
.kube

# Ignore dotfiles Git repo
.dot.git

# GNUPG
.gnupg/
!.gnupg/gpg-agent.conf

# Ignore user binaries
.local/bin/
