# -*- indent-tabs-mode: nil -*-

# XDG specifications
# https://specifications.freedesktop.org/basedir-spec/basedir-spec-latest.html
# User directories
XDG_CONFIG_HOME                 DEFAULT=@{HOME}/.config
XDG_CACHE_HOME                  DEFAULT=@{HOME}/.cache
XDG_DATA_HOME                   DEFAULT=@{HOME}/.local/share

# System directories
XDG_DATA_DIRS                   DEFAULT=/usr/local/share:/usr/share    OVERRIDE=${XDG_DATA_DIRS}
XDG_CONFIG_DIRS                 DEFAULT=/etc/xdg                       OVERRIDE=${XDG_CONFIG_DIRS}

# NodeJS path for global packages (i.e. those installed with `-g`)
npm_config_prefix               DEFAULT=${XDG_DATA_HOME}/node_modules
PATH                            DEFAULT=${npm_config_prefix}/bin:${PATH}

# Set cargo location
CARGO_HOME                      DEFAULT=${XDG_DATA_HOME}/cargo
PATH                            DEFAULT=${CARGO_HOME}/bin:${PATH}

# Set up composer installation
COMPOSER_HOME                   DEFAULT=${XDG_DATA_HOME}/composer
PATH                            DEFAULT=${COMPOSER_HOME}/vendor/bin:${PATH}

# Set appearance settings for Qt apps
QT_QPA_PLATFORMTHEME            DEFAULT=qt5ct

# Set the default number of jobs used by `cmake --build` and `ctest`
CMAKE_BUILD_PARALLEL_LEVEL      DEFAULT=8
CTEST_PARALLEL_LEVEL            DEFAULT=${CMAKE_BUILD_PARALLEL_LEVEL}

# Set the root of the Android SDK for proper detection in Android Studio
ANDROID_SDK_ROOT                DEFAULT=${XDG_DATA_HOME}/android-sdk
PATH                            DEFAULT=${ANDROID_SDK_ROOT}/platform-tools:${PATH}

# Alternate location for Gradle's data
GRADLE_USER_HOME                DEFAULT=${XDG_DATA_HOME}/gradle

# Alternate location for less's config file and cache
LESSKEY                         DEFAULT=${XDG_CONFIG_HOME}/less/lesskey
LESSHISTFILE                    DEFAULT=${XDG_CACHE_HOME}/less/history

# Alternate location for npm's data
NPM_CONFIG_USERCONFIG           DEFAULT=${XDG_CONFIG_HOME}/npm/npmrc

# Set user-wide paths to binaries and dynamically-linked libraries
PATH                            DEFAULT=@{HOME}/.local/bin:${PATH}
